<% include ../partials/header.ejs %>
<script type="text/javascript" src="js/espaceMembre.js"></script>
<div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1">
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">Informations</div>
        <div class="panel-body">
            <div class="row">
                <div class="col-xs-3">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <td>
                                Arrêt
                            </td>
                            <td>
                                0
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Position en temps réel
                            </td>
                            <td>
                                0
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Lignes
                            </td>
                            <td>
                                0
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-8 well">
                    Entreprise <b><%= agency.agency_name %></b> <br />
                    Fichier zip GTFS : <a href="<%= agency.urlGTFSFile %>"><%= agency.urlGTFSFile %></a> <button data-idagency="<%= agency._id %>" id="updateGTFS">Mettre à jour</button><br />
                    <% if (agency.urlGTFSAlert != "") { %>
                    Fichiers GTFS RealTime : <br />
                    <a href="<%= agency.urlGTFSAlert %>"><%= agency.urlGTFSAlert %></a> <br />
                    <a href="<%= agency.urlGTFSTripUpdate %>"><%= agency.urlGTFSTripUpdate %></a> <br />
                    <a href="<%= agency.urlGTFSVehiclePosition %>"><%= agency.urlGTFSVehiclePosition %></a> <br />
                    <% } %>
                </div>
            </div>
            <div class="row">
                <button style="width: 100%; height: 100px;"><span style="font-size: 30px" class="glyphicon glyphicon-user"></span><br />Modifier ses informations</button>
            </div>
            <div class="row">
                <button style="width: 100%; height: 100px;"><span style="font-size: 30px" class="glyphicon glyphicon-remove-circle"></span><br />Se désinscrire</button>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer.ejs %>